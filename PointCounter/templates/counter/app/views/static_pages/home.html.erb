<%provide(:title,"Home")%>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="counter_form">
        <%= render 'shared/counter_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>已上传图片</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

<div class="center jumbotron">
  <h1>欢迎来到荧光颗粒计数平台</h1>

  <h2>
    这是
    <a href="http://www.railstutorial.org/">荧光颗粒计数平台</a>的主页。
  </h2>

  <%= link_to "立即注册!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<div class="col-md-8" style="margin-left: 475px"> <%= link_to image_tag("logo.png", alt: "Rails logo"),
            'https://github.com/lvyifanlvlv/PointCounter/' %></div>


